{
  "website": {
    "name": "Lumière Collection",
    "type": "luxury_brand",
    "industry": "fashion_jewelry",
    "styles": {
      "colors": {
        "primary": "#000000",
        "secondary": "#FFFFFF", 
        "accent": "#D4AF37",
        "background": "#FAFAFA",
        "text": "#1A1A1A",
        "muted": "#8B8B8B"
      },
      "typography": {
        "primaryFont": {
          "name": "Playfair Display",
          "weights": "300,400,500,600,700",
          "source": "google"
        },
        "secondaryFont": {
          "name": "Inter",
          "weights": "300,400,500,600",
          "source": "google"
        },
        "fontSizes": {
          "h1": "3.5rem",
          "h2": "2.5rem", 
          "h3": "1.75rem",
          "body": "1rem",
          "small": "0.875rem"
        }
      },
      "spacing": {
        "padding": {
          "small": "1rem",
          "medium": "2rem",
          "large": "4rem",
          "xl": "6rem"
        },
        "gap": "1.5rem"
      },
      "borderRadius": {
        "default": "0.25rem",
        "large": "0.5rem"
      },
      "breakpoints": {
        "mobile": "640px",
        "tablet": "768px", 
        "desktop": "1024px",
        "wide": "1280px"
      }
    },
    "structure": {
      "pages": [
        {
          "name": "Home",
          "path": "/",
          "layout": {
            "header": {
              "type": "minimal_luxury",
              "sticky": true,
              "components": [
                {
                  "type": "logo",
                  "position": "center",
                  "content": {
                    "text": "LUMIÈRE",
                    "tagline": "Collection"
                  }
                },
                {
                  "type": "nav",
                  "position": "split",
                  "items": [
                    {"label": "Collections", "path": "/collections"},
                    {"label": "Heritage", "path": "/heritage"},
                    {"label": "Atelier", "path": "/atelier"},
                    {"label": "Contact", "path": "/contact"}
                  ]
                },
                {
                  "type": "actions",
                  "position": "right",
                  "items": [
                    {"type": "search", "icon": "search"},
                    {"type": "account", "icon": "user"},
                    {"type": "cart", "icon": "shopping-bag"}
                  ]
                }
              ]
            },
            "main": {
              "sections": [
                {
                  "type": "hero",
                  "layout": "fullscreen_video",
                  "content": {
                    "title": "Timeless Elegance",
                    "subtitle": "Discover our handcrafted jewelry collection, where each piece tells a story of exceptional craftsmanship and enduring beauty.",
                    "cta": {
                      "primary": {
                        "label": "Explore Collection",
                        "path": "/collections"
                      },
                      "secondary": {
                        "label": "Watch Story",
                        "path": "/heritage"
                      }
                    },
                    "media": {
                      "type": "video",
                      "src": "/videos/hero-luxury.mp4",
                      "poster": "/images/hero-poster.jpg"
                    }
                  },
                  "styles": {
                    "height": "100vh",
                    "overlay": "rgba(0,0,0,0.3)",
                    "textAlign": "center"
                  }
                },
                {
                  "type": "featured_collections",
                  "content": {
                    "title": "Signature Collections",
                    "subtitle": "Each collection embodies our commitment to exceptional artistry",
                    "collections": [
                      {
                        "name": "Étoile",
                        "description": "Celestial-inspired pieces featuring rare diamonds",
                        "image": "/images/collection-etoile.jpg",
                        "price_range": "From $2,500",
                        "link": "/collections/etoile"
                      },
                      {
                        "name": "Héritage",
                        "description": "Vintage-inspired designs with modern refinement",
                        "image": "/images/collection-heritage.jpg", 
                        "price_range": "From $1,800",
                        "link": "/collections/heritage"
                      },
                      {
                        "name": "Moderne",
                        "description": "Contemporary geometric forms in precious metals",
                        "image": "/images/collection-moderne.jpg",
                        "price_range": "From $3,200", 
                        "link": "/collections/moderne"
                      }
                    ]
                  },
                  "layout": "grid_3_columns",
                  "animation": "fade_up_stagger"
                },
                {
                  "type": "brand_story",
                  "layout": "split_image_text",
                  "content": {
                    "title": "A Legacy of Excellence",
                    "description": "For over three decades, Lumière Collection has been at the forefront of luxury jewelry design. Our master artisans combine time-honored techniques with innovative design to create pieces that transcend fashion and become treasured heirlooms.",
                    "highlights": [
                      "Ethically sourced materials",
                      "Master craftsman heritage",
                      "Lifetime warranty",
                      "Bespoke design services"
                    ],
                    "cta": {
                      "label": "Our Story",
                      "path": "/heritage"
                    },
                    "image": "/images/atelier-craftsman.jpg"
                  }
                },
                {
                  "type": "testimonials",
                  "layout": "carousel_luxury",
                  "content": {
                    "title": "Cherished by Connoisseurs",
                    "testimonials": [
                      {
                        "quote": "The craftsmanship is absolutely extraordinary. Each piece feels like a work of art.",
                        "author": "Isabella Chen",
                        "location": "New York",
                        "rating": 5
                      },
                      {
                        "quote": "Lumière created the most beautiful custom engagement ring. The attention to detail was phenomenal.",
                        "author": "Marcus Williams", 
                        "location": "London",
                        "rating": 5
                      },
                      {
                        "quote": "I've been collecting luxury jewelry for years. Lumière pieces are truly exceptional.",
                        "author": "Sophie Laurent",
                        "location": "Paris", 
                        "rating": 5
                      }
                    ]
                  }
                },
                {
                  "type": "newsletter_signup",
                  "layout": "minimal_centered",
                  "content": {
                    "title": "Join Our Circle",
                    "subtitle": "Be the first to discover new collections and exclusive events",
                    "form": {
                      "fields": [
                        {"type": "email", "placeholder": "Enter your email", "required": true}
                      ],
                      "button": "Subscribe",
                      "privacy": "We respect your privacy and will never share your information"
                    }
                  },
                  "styles": {
                    "backgroundColor": "#000000",
                    "textColor": "#FFFFFF"
                  }
                }
              ]
            },
            "footer": {
              "layout": "luxury_minimal",
              "components": [
                {
                  "type": "brand_info",
                  "content": {
                    "logo": "LUMIÈRE",
                    "tagline": "Timeless luxury jewelry since 1990",
                    "description": "Handcrafted excellence in every piece"
                  }
                },
                {
                  "type": "links",
                  "columns": [
                    {
                      "title": "Collections",
                      "items": [
                        {"label": "Étoile", "path": "/collections/etoile"},
                        {"label": "Héritage", "path": "/collections/heritage"},
                        {"label": "Moderne", "path": "/collections/moderne"},
                        {"label": "Bespoke", "path": "/bespoke"}
                      ]
                    },
                    {
                      "title": "Services",
                      "items": [
                        {"label": "Personal Shopping", "path": "/services/personal-shopping"},
                        {"label": "Repairs", "path": "/services/repairs"},
                        {"label": "Appraisals", "path": "/services/appraisals"},
                        {"label": "Care Guide", "path": "/care"}
                      ]
                    },
                    {
                      "title": "Company",
                      "items": [
                        {"label": "Our Story", "path": "/heritage"},
                        {"label": "Sustainability", "path": "/sustainability"},
                        {"label": "Press", "path": "/press"},
                        {"label": "Careers", "path": "/careers"}
                      ]
                    }
                  ]
                },
                {
                  "type": "contact_info",
                  "content": {
                    "phone": "+1 (555) 123-4567",
                    "email": "concierge@lumierecollection.com",
                    "address": "Madison Avenue Flagship, New York"
                  }
                },
                {
                  "type": "social_media",
                  "platforms": [
                    {"name": "Instagram", "url": "https://instagram.com/lumierecollection", "icon": "instagram"},
                    {"name": "Pinterest", "url": "https://pinterest.com/lumierecollection", "icon": "pinterest"},
                    {"name": "YouTube", "url": "https://youtube.com/lumierecollection", "icon": "youtube"}
                  ]
                },
                {
                  "type": "legal",
                  "items": [
                    {"label": "Privacy Policy", "path": "/privacy"},
                    {"label": "Terms of Service", "path": "/terms"},
                    {"label": "Returns", "path": "/returns"}
                  ]
                }
              ]
            }
          }
        }
      ]
    },
    "settings": {
      "responsive": true,
      "accessibility": {
        "ariaLabels": true,
        "keyboardNav": true,
        "altText": true,
        "focusIndicators": true
      },
      "performance": {
        "lazyLoading": true,
        "imageOptimization": true,
        "codesplitting": true
      },
      "seo": {
        "metaTags": true,
        "structuredData": true,
        "sitemap": true,
        "robotsTxt": true
      },
      "analytics": {
        "googleAnalytics": true,
        "conversionTracking": true,
        "heatmaps": true
      }
    }
  }
}